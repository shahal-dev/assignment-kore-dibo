{
  "builds": [
    { "src": "server/index.ts",    "use": "@vercel/node" },
    { "src": "vite.config.ts",     "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)",     "dest": "/dist/$1" }
  ]
}
